apiVersion: argoproj.io/v1alpha1
kind: AppProject
metadata:
  name: bgd
  namespace: argocd
spec:
  destinations:
    - namespace: bgd
      server: '*'
  sourceRepos:
    - '*'
---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: Blue-Green-Box
  namespace: argocd
spec:
  destination:
    namespace: bgd
    server: 'https://kubernetes.default.svc'
  project: default
  source:
    path: bgd
    repoURL: 'https://github.com/tjungbauer/gitops-examples/'
    targetRevision: master
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
