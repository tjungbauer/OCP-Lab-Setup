apiVersion: argoproj.io/v1alpha1
kind: ArgoCD
metadata:
  name: main-argocd
  namespace: {{ argocd_namespace }}
spec:
  server:
    route:
      enabled: true
  dex:
    image: quay.io/redhat-cop/dex
    openShiftOAuth: true
    version: v2.22.0-openshift
  rbac:
    defaultPolicy: 'role:readonly'
    policy: |
      g, {{ argocd_auth_group }}, role:admin
    scopes: '[groups]'
